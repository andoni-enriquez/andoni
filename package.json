{
  "name": "andoni",
  "private": true,
  "engines": {
    "node": ">=24.12.0"
  },
  "packageManager": "bun@1.3.9",
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean && rm -f bun.lock",
    "dev": "turbo watch dev",
    "format": "biome check",
    "format:fix": "biome check --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ],
    "catalog": {
      "react": "^19.2.4",
      "react-dom": "^19.2.4",
      "typescript": "^5.9.3",
      "next": "^16.1.6",
      "@types/node": "^25.2.3",
      "@types/react": "^19.2.14",
      "@types/react-dom": "^19.2.3"
    },
    "catalogs": {
      "tailwind": {
        "tailwindcss": "^4.1.18",
        "@tailwindcss/postcss": "^4.1.18",
        "postcss": "^8.5.6"
      }
    }
  }
}
