{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".cache/tsbuildinfo.json",
        "dist/**",
        ".tsbuild/**",
        ".next/cache/**"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/tsbuildinfo.json"],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalDependencies": ["bun.lock"],
  "globalEnv": ["NEXT_PUBLIC_*"],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "VERCEL*", "npm_lifecycle_event"]
}
